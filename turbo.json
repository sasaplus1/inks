{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "index.ts",
        "index.tsx",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "index.ts",
        "index.tsx",
        "index.test.ts",
        "index.test.tsx",
        "vitest.config.ts",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": []
    }
  },
  "globalDependencies": [
    "tsconfig.json",
    ".eslintrc.cjs",
    ".prettierrc",
    ".editorconfig"
  ]
}
